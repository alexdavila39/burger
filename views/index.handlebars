<div class="container">

    <div class="row">
        <div class="text-center col-sm-12">
            <h1>EAT DA BURGER!</h1>
            <p></p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 task">

            <h2>Burgers Available to eat</h2>
            <br>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <div class="row">
                        <div class="col-sm-6">
                            {{this.id}}
                            {{this.burger_name}}
                        </div>
                        <div class="col-sm-6">
                            <form class="devour" method="POST" action="/{{this.id}}">
                                <input type="hidden" name="devoured" type="text" value="true">
                                <br>
                                <button type="submit" class="btn btn-primary btn-sm">DEVOUR IT!</button>
                            </form>
                        </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">

            <h2>Burgers That have been Eaten</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>

    </div>
    <div class="row">
        <div class="col-sm-12 text-center ">
            <h2>Add A Burger!</h2>

            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <p>Enter a Burger you would like to order!</p>
                    <input type="text" id="form-control" name="burger_name">
                    <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
                </div>
            </form>

        </div>
    </div>

</div>
<div class="row">
    <div class="col-sm-12">

        <div class="img">
        </div>
    </div>
</div>
<script>
    $(".devour").on("submit", function (e) {
        e.preventDefault()
        console.log(e.target.action);
        $.ajax(e.target.action, {
            method: "PUT"
        }).then(function () {
            location.reload();
        })
    })
</script>